{
    "name": "raccoon-city-graphql",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "engines": {
        "node": "10.x"
    },
    "scripts": {
        "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
        "debug": "dotenv -- nodemon -e ts,graphql -x node --inspect=9200 -r ts-node/register src/index.ts",
        "build": "rimraf dist && tsc",
        "precommit": "lint-staged",
        "prettier": "pretty-quick"
    },
    "dependencies": {
        "@types/mongoose": "^5.5.32",
        "apollo-link": "^1.2.13",
        "apollo-server": "^2.9.12",
        "bcryptjs": "^2.4.3",
        "firebase": "^7.5.0",
        "firebase-admin": "^8.8.0",
        "graphql": "^14.5.8",
        "graphql-upload": "^8.1.0",
        "jsonwebtoken": "8.5.1",
        "lint-staged": "^9.4.3",
        "marked": "^0.7.0",
        "merge-graphql-schemas": "^1.7.3",
        "mongoose": "^5.7.11",
        "multer": "^1.4.2",
        "pretty-quick": "^2.0.1",
        "prisma-client-lib": "^1.34.10",
        "set-value": "^3.0.1",
        "sync-exec": "^0.6.2",
        "uuidv4": "^6.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/node": "10.17.5",
        "dotenv-cli": "1.4.0",
        "lint-staged": "^9.4.3",
        "nodemon": "^2.0.1",
        "prettier": "^1.19.1",
        "prisma": "1.34.10",
        "rimraf": "^3.0.0",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    },
    "lint-staged": {
        "**/*.ts": [
            "prettier",
            "git add"
        ]
    }
}
